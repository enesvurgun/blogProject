@model projeBlog.ViewModels.RegisterVM

@{
    Layout = "_LoginLayout"; 
    ViewData["Title"] = "Register User"; 
}

<div class="container-fluid">
    <!-- Geri Dön düğmesi -->
    <a class="btn btn-primary mb-1" asp-action="Index" asp-controller="User">Geri Dön</a>

    <!-- Kart bileşeni -->
    <div class="card">
        <!-- Kart başlığı -->
        <div class="card-header bg-primary">
            <h4 class="card-title text-white">Kayıt Ol</h4> <!-- Başlık beyaz renkte ve mavi arka planla gösterilir. -->
        </div>

        <!-- Kart gövdesi -->
        <div class="card-body">
            <!-- Kayıt formu -->
            <form asp-action="Register" asp-controller="User" asp-area="Admin">
                <!-- Ad alanı -->
                <div class="mb-2">
                    <label>Ad</label>
                    <input type="text" asp-for="FirstName" class="form-control" /> <!-- Kullanıcının adını girmek için metin kutusu. -->
                    <span asp-validation-for="FirstName" class="text-danger"></span> <!-- Ad doğrulama mesajı. -->
                </div>

                <!-- Soyad alanı -->
                <div class="mb-2">
                    <label>Soyad</label>
                    <input type="text" asp-for="LastName" class="form-control" /> <!-- Kullanıcının soyadını girmek için metin kutusu. -->
                    <span asp-validation-for="LastName" class="text-danger"></span> <!-- Soyad doğrulama mesajı. -->
                </div>

                <!-- Email alanı -->
                <div class="mb-2">
                    <label>Email</label>
                    <input type="email" asp-for="Email" class="form-control" /> <!-- Kullanıcının email adresini girmek için metin kutusu. -->
                    <span asp-validation-for="Email" class="text-danger"></span> <!-- Email doğrulama mesajı. -->
                </div>

                <!-- Kullanıcı Adı alanı -->
                <div class="mb-2">
                    <label>Kullanıcı Adı</label>
                    <input type="text" asp-for="UserName" class="form-control" /> <!-- Kullanıcının kullanıcı adını girmek için metin kutusu. -->
                    <span asp-validation-for="UserName" class="text-danger"></span> <!-- Kullanıcı adı doğrulama mesajı. -->
                </div>

                <!-- Şifre alanı -->
                <div class="mb-2">
                    <label>Şifre</label>
                    <input type="password" asp-for="Password" class="form-control" /> <!-- Kullanıcının şifresini girmek için metin kutusu. -->
                    <span asp-validation-for="Password" class="text-danger"></span> <!-- Şifre doğrulama mesajı. -->
                </div>

                <!-- Admin mi? alanı -->
                <div class="mb-2">
                    <input type="checkbox" class="custom-checkbox" asp-for="IsAdmin" /> <!-- Kullanıcının admin olup olmadığını belirtmek için onay kutusu. -->
                    <label>Admin mi?</label>
                </div>

                <!-- Kaydol düğmesi -->
                <div class="mb-2">
                    <button type="submit" class="btn btn-primary w-100">Kaydol</button> <!-- Formu göndermek için buton. -->
                </div>
            </form>
        </div>
    </div>
</div>
